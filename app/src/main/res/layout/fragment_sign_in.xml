<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/gray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/signin_button"
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:layout_above="@+id/textView12"
            android:layout_alignStart="@+id/editTextTextEmailAddress2"
            android:layout_alignEnd="@+id/editTextTextEmailAddress2"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/shriftovik_sk_concretica"
            android:gravity="center"
            android:text="Log In"
            android:textAllCaps="false"
            android:textColor="@color/dark_gray"
            android:textSize="25dp"
            android:textStyle="bold"
            app:cornerRadius="15dp" />

        <EditText
            android:id="@+id/editTextTextEmailAddress2"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/textView10"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/rounded_rectangle"
            android:ems="10"
            android:fontFamily="@font/exo2_0_light"
            android:inputType="textEmailAddress"
            android:paddingVertical="5dp"
            android:paddingLeft="10dp"
            android:radius="25dp" />

        <EditText
            android:id="@+id/editTextTextPassword3"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@+id/editTextTextEmailAddress2"
            android:layout_alignStart="@+id/editTextTextEmailAddress2"
            android:layout_alignEnd="@+id/editTextTextEmailAddress2"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/rounded_rectangle"
            android:ems="10"
            android:inputType="textPassword"
            android:paddingVertical="5dp"
            android:paddingLeft="10dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/mainlogo_white1" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/remember_me_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/editTextTextPassword3"
            android:layout_alignStart="@+id/editTextTextEmailAddress2"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:buttonTint="@color/red"
            android:paddingEnd="8dp"
            android:text="Remember Me"
            android:textColor="@color/beige"
            android:fontFamily="@font/exo2_0_light"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/imageView2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/shriftovik_sk_concretica"
            android:gravity="center"
            android:text="Log In"
            android:textAllCaps="false"
            android:textColor="@color/blue"
            android:textSize="40dp"
            android:textStyle="normal"
            android:letterSpacing="0.05"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView14"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/exo2_0_light"
            android:text="Create an Account"
            android:textColor="@color/blue"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView14"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/exo2_0_light"
            android:text="Donâ€™t have an account?"
            android:textColor="@color/beige"
            android:textSize="15dp"/>

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextTextPassword3"
            android:layout_alignEnd="@+id/editTextTextPassword3"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:fontFamily="@font/exo2_0_light"
            android:text="Forgot password?"
            android:textColor="@color/red"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageView8"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/exo2_0_light"
            android:gravity="center"
            android:text="or"
            android:textColor="@color/beige" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView8"
            android:layout_alignBottom="@+id/imageView8"
            android:layout_marginStart="50dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/imageView8"
            app:srcCompat="@drawable/apple" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="65dp"
            app:srcCompat="@drawable/facebook" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView8"
            android:layout_alignBottom="@+id/imageView8"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="0dp"
            android:layout_toStartOf="@+id/imageView8"
            app:srcCompat="@drawable/google" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView14"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="0dp"
            android:layout_toStartOf="@+id/textView14"
            app:srcCompat="@drawable/line_27" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView14"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/textView14"
            app:srcCompat="@drawable/line_27" />


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>