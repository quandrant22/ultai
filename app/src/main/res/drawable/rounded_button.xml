<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/red"/> <!-- Цвет кнопки при нажатии -->
            <corners android:radius="25dp"/> <!-- Закругление углов -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/blue"/> <!-- Основной цвет кнопки -->
            <corners android:radius="25dp"/>
            <stroke android:width="2dp" android:color="@color/blue"/> <!-- Граница -->
        </shape>
    </item>
</selector>
